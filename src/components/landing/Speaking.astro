---
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const data = [
  {
    period: "2023",
    title: "Placeholder",
    description: `Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum non justo viverra, finibus arcu convallis, iaculis est. Nunc tortor nibh, dignissim eu dictum vitae, tempor eget velit. Sed sit amet posuere neque, id sollicitudin risus. Phasellus blandit vitae lorem id malesuada. Cras vitae congue dui. Ut augue libero, lacinia id pharetra eu, consequat in lorem. Vivamus vel nunc eros. Donec pellentesque leo vitae justo auctor, sit amet ornare est volutpat. Proin volutpat lacus vitae tincidunt tincidunt. Cras accumsan luctus augue, in lacinia augue suscipit et.`,
    location: "Nowhere, Somewhere",
  },
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200 dark:border-base-800"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text tag="h2" variant="textSM" class="text-base-900 dark:text-white">
          Speaking
        </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          data.map((data) => (
            <article class="group relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start ">
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class=" font-medium tracking-tight text-base-900 dark:text-white    "
                >
                  {data.title}
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class=" mt-1 text-base-600 dark:text-base-500      "
                >
                  {data.description}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="text-base-600 dark:text-base-400  lg:ml-auto"
              >
                <time datetime={data.period}> {data.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
