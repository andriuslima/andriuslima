---
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const data = [
  {
    period: "2016–2020",
    title: "Bachelor's in Computer Science",
    description: `The program provides comprehensive training in Computer Science as it equips its students to work as system developers, researchers, software designers, technology consultants, managers in technology companies and future entrepreneurs. The program includes not only the fundamentals of Information Technology but also its major areas of operation, practical applications and technological trends that are constantly revisited.`,
    location: "Pontifícia Universidade Católica do Rio Grande do Sul, Brazil",
      link: "https://www.pucrs.br/en"
  }
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200 dark:border-base-800"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text tag="h2" variant="textSM" class="text-base-900 dark:text-white">
          Education
        </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          data.map((data) => (
            <article class="group relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start ">
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class=" font-medium tracking-tight text-base-900 dark:text-white    "
                >
                  {data.title}
                </Text>
                  <Text
                          tag="h3"
                          variant="textSM"
                          class=" font-medium tracking-tight text-base-700 dark:text-white    "
                  >
                      <a href={data.link}> at {data.location} </a>
                  </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class=" mt-1 text-base-600 dark:text-base-500      "
                >
                  {data.description}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="text-base-600 dark:text-base-400  lg:ml-auto"
              >
                <time datetime={data.period}> {data.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
